<h1>Liste des missions</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>En cours</th>
  </tr>

<% @missions.each do |mission| %>
  <tr>
    <td> <%=mission.name%> </td>
    <td> <%=mission.encours %></td>
    <% if can? :manage, @missions %>
      <td><%= link_to 'Envoi SPA', mission %></td>
      <td><%= link_to 'Modifier', edit_mission_path(mission) %></td>
      <td><%= link_to 'Supprimer', mission, :confirm => 'Confirmez-vous la suppression?', :method => :delete %></td>
    <% else %>
